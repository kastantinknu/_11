<Window x:Class="lab11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab11"
        mc:Ignorable="d"
        Title="MainWindow" Height="409" Width="346">


    <Grid Margin="3,3,0,-6" Background="#FF29DDD4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Margin="3" Padding="3" Click="cmdStart_Clicked">Start</Button>
            <Button Margin="3" Padding="3" Click="cmdStop_Clicked">Stop</Button>
            <Button Margin="3" Padding="3" Content="Speed 1" Click="Button_Click" Height="24" Width="53"/>
            <Button Margin="3" Padding="3" Content="Speed 2" Width="52" Height="24" Click="Button_Click_1"/>
        </StackPanel>

        <Canvas Name="canvas" Margin="22,20,21,19" Grid.Row="1" Background="#FFEBFF00" Height="300" Width="300"/>
    </Grid>


</Window>
